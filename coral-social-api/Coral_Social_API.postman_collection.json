{
  "info": {
    "name": "Coral Social API - CoralHub",
    "description": "REST API for CoralHub social features with BuddyPress and bbPress",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "1.0.0"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{jwt_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "https://your-domain.com/wp-json/coral/v1",
      "type": "string"
    },
    {
      "key": "jwt_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "user_id",
      "value": "1",
      "type": "string"
    },
    {
      "key": "group_id",
      "value": "1",
      "type": "string"
    },
    {
      "key": "activity_id",
      "value": "1",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "0. Authentication",
      "item": [
        {
          "name": "Login - Get JWT Token",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"admin\",\n  \"password\": \"your_password\"\n}"
            },
            "url": {
              "raw": "https://your-domain.com/wp-json/jwt-auth/v1/token",
              "protocol": "https",
              "host": ["your-domain", "com"],
              "path": ["wp-json", "jwt-auth", "v1", "token"]
            },
            "description": "Gets the JWT token for authentication. Save the token in the jwt_token variable."
          },
          "response": []
        },
        {
          "name": "Validate Token",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "https://your-domain.com/wp-json/jwt-auth/v1/token/validate",
              "protocol": "https",
              "host": ["your-domain", "com"],
              "path": ["wp-json", "jwt-auth", "v1", "token", "validate"]
            },
            "description": "Validates if the JWT token is valid."
          },
          "response": []
        }
      ]
    },
    {
      "name": "1. Activity Feed",
      "item": [
        {
          "name": "Get Activity Feed",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/activity/feed?page=1&per_page=20&scope=all",
              "host": ["{{base_url}}"],
              "path": ["activity", "feed"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "per_page",
                  "value": "20"
                },
                {
                  "key": "scope",
                  "value": "all",
                  "description": "Options: all, friends, groups, mentions"
                }
              ]
            },
            "description": "Gets the activity feed. Optional parameters: user_id, type, scope."
          },
          "response": []
        },
        {
          "name": "Get Specific Activity",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/activity/{{activity_id}}",
              "host": ["{{base_url}}"],
              "path": ["activity", "{{activity_id}}"]
            },
            "description": "Gets a specific activity by ID."
          },
          "response": []
        },
        {
          "name": "Create Activity",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"content\": \"Hello everyone! This is my first post on CoralHub üê†\",\n  \"type\": \"activity_update\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/activity/feed",
              "host": ["{{base_url}}"],
              "path": ["activity", "feed"]
            },
            "description": "Creates a new activity in the feed."
          },
          "response": []
        },
        {
          "name": "Delete Activity",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/activity/{{activity_id}}",
              "host": ["{{base_url}}"],
              "path": ["activity", "{{activity_id}}"]
            },
            "description": "Deletes an activity. Only the owner or administrator can delete it."
          },
          "response": []
        },
        {
          "name": "Like/Unlike Activity",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{base_url}}/activity/{{activity_id}}/like",
              "host": ["{{base_url}}"],
              "path": ["activity", "{{activity_id}}", "like"]
            },
            "description": "Likes an activity. If already liked, it unlikes it."
          },
          "response": []
        }
      ]
    },
